@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Collection Advantage - Login In</title>
    <!-- Bootstrap core CSS-->
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom fonts for this template-->
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!-- Custom styles for this template-->
    @*<link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="~/Content/vendor/bootstrap/css/style.css">
</head>
<body>
    <main id="banner">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="logo pt-5 mt-5">
                        <img src="~/Images/logo.jpg" alt="Logo">
                    </div>
                </div>
                <div class="offset-md-3"></div>
                <div class="col-md-5">
                    <div class="bg_background text-white">
                        <div class="cont py-5 text-center ">
                            <h1>Forgot Password</h1>
                            <small>Lorem Ipsum color set</small>
                        </div>
                        <div class="card-body">
                            <form class="px-3">
                                <div class="form-group">
                                    <div class="form-label-group">
                                        <label for="email">Email address:</label>
                                        <input type="email" id="txtUsername" class="form-control" placeholder="Username" required="required" autofocus="autofocus">
                                    </div>
                                </div>
                                <div class="btnn pt-3 text-center">
                                    <button type="submit" class="btn btn-primary pull-left">Proceed</button>
                                </div>
                            </form>
                            <div class="text-center">
                                @ViewBag.ErrorMsg
                            </div>
                            <div>
                                @if (TempData["ErrorMessage"] != null)
                                {
                                    <div style="background-color: #ff9999; color: black; overflow: hidden; padding: 10px; border-radius: 4px; " id="messageDisplay1">
                                        <div href="" style="text-align: right; padding-right: 10px; float: right;cursor:pointer;" align="right" class="clsBtn1"><b>x</b></div>
                                        <div style="padding-left: 20px; padding-right: 20px; float: left;">
                                            <b>@TempData["ErrorMessage"]</b>
                                        </div>
                                        <script>
                                            $(document).ready(function () {
                                                $(".clsBtn1")
                                                    .click(function () {
                                                        $("#messageDisplay1").fadeOut(2000);
                                                        $("#messageDisplay1").hide(2000);
                                                    });
                                            });
                                        </script>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/CustomScripts/Account/LoginAccount.js"></script>
</body>
</html>
