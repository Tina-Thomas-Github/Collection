    <!-- Bootstrap core CSS-->
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom fonts for this template-->
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!-- Page level plugin CSS-->
    <link href="~/Content/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
    <!-- Custom styles for this template-->
    <link rel="stylesheet" href="~/Content/vendor/bootstrap/css/style.css">
    <style>
        .hide {
            display: none !important;
        }
    </style>
</head>
<body id="page-top">
    <nav class="navbar navbar-expand-lg navbar-light bg-white static-top">
        <a class="navbar-brand" href="#"><img src="~/Images/logo.jpg" class="logoImg" height="76" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown no-arrow mx-1">
                    <a class="nav-link" href="/Home/Dashboard" role="button" style="color: #858796;">
                        Dashboard
                    </a>
                </li>
                <li class="nav-item dropdown no-arrow mx-1">
                    <a class="nav-link dropdown-toggle" href="#" id="CampDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: #858796;">
                        Campaigns
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="CampDropdown">
                        <a class="dropdown-item" href="/Campaign/ViewCampaign">View Campaigns</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/Campaign/Create">Create Campaigns</a>
                        @*<div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/Campaign/Customer">Edit Campaigns</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/Campaign/Delete">Delete Campaigns</a>*@
                    </div>
                </li>
                <li class="nav-item dropdown no-arrow mx-1">
                    <a class="nav-link" href="/Vendor/ViewVendor" role="button" style="color: #858796;">
                        Vendors
                    </a>
                    @*<div class="dropdown-menu dropdown-menu-right" aria-labelledby="VendorDropdown">
                        <a class="dropdown-item" href="/Vendor/ViewVendor">View Vendors</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Create Vendors</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Edit Vendors</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Delete Vendors</a>
                    </div>*@
                </li>
                <li class="nav-item dropdown no-arrow mx-1">
                    <a class="nav-link" href="/DataWarehouse/Create" role="button" style="color: #858796;">
                        Data Warehouse
                    </a>
                </li>
                <li class="nav-item dropdown no-arrow mx-1">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: #858796;">
                        <i class="fas fa-user-circle fa-fw"></i> Hi
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                        <a class="dropdown-item" href="#">My Profile</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/Account/Reset">Change Password</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">@*<i class="fas fa-sign-out fa-fw"></i>*@Sign Out</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div id="wrapper">
        <div id="content-wrapper">
            @RenderBody()
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © @DateTime.Now.Year - Collections Application</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <a class="btn btn-primary" href="~/Account/Login">Logout</a>
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/vendor/datatables/dataTables.bootstrap4.js"></script>
