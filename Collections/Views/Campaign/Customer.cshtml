@{
    ViewBag.Title = "Create Vendor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="View_customer" class="bg-light py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Customer Name</h1>
            </div>
            <div class="col-md-6 text-right">
                <div class="button">
                    @*Blank Div*@
                </div>
            </div>
        </div>
    </div>
    <div id="fields_section" class="py-3">
        <div class="container">
            <div class="row">
                <div class="table-responsive table-sm">
                    <table id="table_id" class="table table-bordered table-sm" style="width: 100%" cellspacing="0">
                        <thead class="thead">
                            <tr>
                                <th style="visibility:hidden" class="hide">Id</th>
                                <th>SNo</th>
                                <th>Customer No</th>
                                <th>Customer Name</th>
                                <th>Customer Phone</th>
                                <th>Revised Due</th>
                                <th>Exit Type</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="container">
    <div class="modal fade bd-example-modal-lg" id="InvestmentFormMaster" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title">Create Vendor</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="card shadow mb-4">

                    <div class="collapse show" id="InvestmentForm">
                        <div class="card-body">
                            <div class="form-group row required">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="hidden" id="hdninvtypeid" />
                                    <label class="control-label">Vendor Name</label>
                                    <input type="text" class="form-control form-control-user" id="txtInvestmentType" placeholder="Vendor Name">
                                </div>

                            </div>
                        </div>
                        <div class="card-body" id="status_section">
                            <div class="form-group row required">
                                <div class="col-sm-6 mb-3 mb-sm-0">

                                    <label class="col-sm-3 mb-3 mb-sm-0">Status</label>
                                    <input type="checkbox" class="col-sm-3 mb-3 mb-sm-0" id="chkstatus">
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="modal-footer justify-content-end">
                            <a href="#" class="btn btn-default btn-icon-split btn-sm" id="btnSubmit" style="border: 1px solid;">
                                <span class="icon text-white-50">
                                    <i class="fas fa-check"></i>
                                </span>
                                <span class="text">Submit</span>
                            </a>

                            <a href="#" class="btn btn-default btn-icon-split btn-sm" data-dismiss="modal" id="btnClear" style="border: 1px solid;">
                                <span class="icon text-white-50">
                                    <i class="fas fa-trash"></i>
                                </span>
                                <span class="text">Clear</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/Scripts")
<script src="~/CustomScripts/Vendor/Create.js"></script>
<style>
    div.dt-buttons {
        float: left;
        margin-left: 50px;
    }

    .exportExcel {
        padding: 5px;
        border: 1px solid black;
        margin: 5px;
        cursor: pointer;
    }
