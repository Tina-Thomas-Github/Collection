    }*/
    .thead {
        background-color: grey;
        color: #fff;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $("#fields_section :input").prop("disabled", true);
        $(".slide-toggle").click(function () {
            if (this.value == "Edit") {
                this.value = "View";
                $("#fields_section :input").prop("disabled", false);
            }
            else {
                this.value = "Edit";
                $("#fields_section :input").prop("disabled", true);
            }
        });
    });
</script> 