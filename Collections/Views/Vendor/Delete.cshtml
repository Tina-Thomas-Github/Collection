
@{
    ViewBag.Title = "ListSchemeForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div id="viewclient" style="display: block">
        <div class="card mb-3">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-10">
                        @*<i class="fas fa-table"></i>*@
                        Scheme Form Master
                    </div>
                    <div class="col-md-2"><button type="button" class="btn btn-default btn-sm btn-split" style="border: 1px solid;" data-toggle="modal" data-target=".bd-example-modal-lg"><i class="fa fa-plus"></i> Create New</button></div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive table-sm">
                    <table id="table_id" class="table table-bordered table-sm" style="width: 100%" cellspacing="0">
                        <thead class="thead">
                            <tr>
                                <th>Investment Type</th>
                                <th>Scheme Category</th>
                                <th>Scheme Form Name</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade bd-example-modal-lg" id="SchemeFormMaster" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title">Scheme Form Master</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="card shadow mb-4">

                    <div class="collapse show" id="SchemeForm">
                        <div class="card-body">
                            <div class="form-group row required">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="hidden" id="hdnschemeformid" />
                                    <label class="control-label">Investment Type</label>

                                    <select class="form-control form-control-user" id="ddlInvestmentType"></select>
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">

                                    <label class="control-label">Scheme Category</label>
                                    <input type="text" class="form-control form-control-user" id="txtSchemeCategory" placeholder="Scheme Category">
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="hidden" id="hdnschemeformid" />
                                    <label class="control-label">Scheme Form Name</label>

                                    <input type="text" class="form-control form-control-user" id="txtSchemeFormName" placeholder="Scheme Form Name">
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">

                                   
                                </div>
                            </div>
                        </div>
                        <div class="card-body" id="status_section">
                            <div class="form-group row required">
                                <div class="col-sm-6 mb-3 mb-sm-0">

                                    <label class="col-sm-3 mb-3 mb-sm-0">Status</label>
                                    <input type="checkbox" class="col-sm-3 mb-3 mb-sm-0" id="chkstatus">
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="modal-footer justify-content-end">
                            <a href="#" class="btn btn-default btn-icon-split btn-sm" id="btnSubmit" style="border: 1px solid;">
                                <span class="icon text-white-50">
                                    <i class="fas fa-check"></i>
                                </span>
                                <span class="text">Submit</span>
                            </a>

                            <a href="#" class="btn btn-default btn-icon-split btn-sm" data-dismiss="modal" id="btnClear" style="border: 1px solid;">
                                <span class="icon text-white-50">
                                    <i class="fas fa-trash"></i>
                                </span>
                                <span class="text">Clear</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

@Scripts.Render("~/bundles/Scripts")

<script src="~/CustomScripts/Master/SchemeFormMaster.js"></script>


<style>
    div.dt-buttons {
        float: left;
        margin-left: 50px;
    }

    .exportExcel {
        padding: 5px;
        border: 1px solid black;
        margin: 5px;
        cursor: pointer;
    }
    /*.blue {
        color: #4e73df;
        text-decoration: none;
        background-color: transparent;
    }*/
    .thead {
        background-color: grey;
        color: #fff;
    }
</style>

