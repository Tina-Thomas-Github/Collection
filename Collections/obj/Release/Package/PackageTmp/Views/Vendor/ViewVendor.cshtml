@{
    ViewBag.Title = "View Vendor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/dataTables.buttons.min.js"></script>
<script src="~/Scripts/buttons.print.min.js"></script>
<section id="View_vendor" class="bg-light py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>View Vendor</h1>
            </div>
            <div class="col-md-6 text-right">
                <div class="button">
                    <button type="button" class="btn btn-default btn-sm btn-split" style="border: 1px solid;" data-toggle="modal"
                            data-target=".bd-example-modal-lg" id="myButton1">
                        <i class="fa fa-plus"></i> Create New
                    </button>
                </div>
            </div>
        </div>
        <div id="fields_section" class="py-3">
            <div class="container">
                <div class="row">
                    <div class="table-responsive table-sm">
                        <table id="table_id" class="table table-bordered table-sm" style="width: 100%" cellspacing="0">
                            <thead class="thead">
                                <tr>
                                    <th style="visibility:hidden" class="hide">Id</th>
                                    <th>Vendor Name</th>
                                    <th>Vendor Short Name</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="container">
    <div class="modal fade bd-example-modal-lg" id="VendorForm" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title"></h6>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="collapse show" id="VendorForm">
                    <div class="col-md-12">
                        <div class="form-group row required">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="hidden" id="hdnVendorID" />
                                <label class="control-label">Vendor Name</label>
                                <input type="text" class="form-control form-control-user" id="txtVendorName" placeholder="Vendor Name">
                            </div>
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <label class="control-label">Vendor Short Name</label>
                                <input type="text" class="form-control form-control-user" id="txtVendorShortName" placeholder="Vendor Short Name">
                            </div>
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <label class="control-label">Status</label>
                                <input type="checkbox" class="col-sm-3 mb-3 mb-sm-0" id="chkstatus">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="modal-footer justify-content-center">
                        <a href="#" class="btn btn-success btn-icon-split btn-sm" id="btnSubmit" style="border: 1px solid;">
                            Submit
                        </a>
                        <a href="#" class="btn btn-danger btn-icon-split btn-sm" data-dismiss="modal" id="btnClear" style="border: 1px solid;">
                            Clear
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/Scripts")
<script src="~/CustomScripts/Vendor/ViewVendor.js"></script>
<style>
    div.dt-buttons {
        float: left;
        margin-left: 50px;
    }

    .exportExcel {
        padding: 5px;
        border: 1px solid black;
        margin: 5px;
        cursor: pointer;
    }

    .thead {
        background-color: grey;
        color: #fff;
    }
</style>
