<div class="container">
    <div class="modal fade bd-example-modal-lg" id="VendorForm" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content px-3">
                <div class="modal-header">
                    <h6 class="modal-title"></h6>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="collapse show" id="cstm_field">
                    <div class="container">
                        <div class="form-group row required">
                            <div class="col-md-12 pb-4">
                                <div class="conent">
                                    <h3>Share Data with people</h3>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <img src="~/Images/data_warehouse/add.svg" /><input type="email" class="form-control form-control-user" id="txtVendorName" placeholder="Add people email">
                                </div>
                            </div>
                            <div class="col-md-12 pt-4">
                                <form class="form-inline">
                                    <div class="form-group mb-2">
                                        <div class="user">
                                            <svg width="3.2em" height="3.2em" viewBox="0 0 16 16" class="bi bi-circle-fill" fill="#f7f7f7" xmlns="http://www.w3.org/2000/svg">
                                                <circle cx="8" cy="8" r="8" />
                                            </svg>
                                        </div>
                                    </div>
                                    <div class="form-group mx-sm-3 mb-2">
                                        <span>
                                            <strong>Collection Advantage (you)</strong><br />
                                            collection_advantage@gmail.com
                                        </span>
                                    </div>
                                    <div class="form-group ml-auto mb-2">
                                        <span>
                                            <em>Owner</em>
                                        </span>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-end">
                    <a href="#" class="btn btn-success btn-icon-split btn-sm" id="btnSubmit" style="border: 1px solid;">
                        Grant Access
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
